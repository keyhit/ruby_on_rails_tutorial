<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
      <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id %></td>
        <td><%= link_to 'Show',
          user_micropost_path(micropost.user_id, micropost.id) %></td>
        <td><%= link_to 'Edit', edit_user_micropost_path(micropost.user_id, micropost.id) %></td>
        <td><%= link_to 'Destroy', user_micropost_path(micropost.user_id, micropost.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Micropost', new_user_micropost_path(params[:user_id]) %> | 
<%= link_to 'User', user_path(params[:user_id]) %>
<%= link_to 'Users', users_path %>
